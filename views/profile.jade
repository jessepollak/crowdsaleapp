html
  head
    title=title
    link(href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css',
      rel='stylesheet'
    )
    <meta name="viewport" content="width=device-width, initial-scale=1">
    #google_translate_element
    script.
      function googleTranslateElementInit() {
        new google.translate.TranslateElement({pageLanguage: 'en', includedLanguages: 'ar,de,es,fr,ja,ko,nl,pt,zh-CN,zh-TW,en', layout: google.translate.TranslateElement.InlineLayout.SIMPLE}, 'google_translate_element');
      }
    script(src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit")
    script(src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")
    <meta name="viewport" content="width=device-width, initial-scale=1">

  body(style="background-color: #f5deed !important" bgcolor="#f5deed")
    div(style="background:#f5deed !important")
      div.container

        div.page-header
          h1 Augur Dashboard

        if errors
          each error in errors
            div.alert.alert-danger
              span #{error.error}
        if saved
          div.alert.alert-success
            span Your profile has been saved

        p
          .alert.alert-info.alert-dismissible(role='alert')
            strong Heads up!
            |  Now or sometime before the Augur launch, submit your Ethereum address here then click save.  
          .alert.alert-warning.alert-dismissible(role='alert')
            strong Warning!
            |  Make sure this is an Ethereum address you have access to call contracts with (meaning: it's not an exchange address).  You'll need it for reporting!

        form.login-form.form-horizontal(method='post', role='form')

          div.form-group
            label.col-sm-4 Ethereum address
            div.col-sm-8
              input.form-control(placeholder='e.g. 0x8d6fd08f8099a63f471ca50e145d1ac5f82a48bb',
                required=true,
                name='address',
                type='text',
                value=address)
          div.form-group
            label.col-sm-4 Bitcoin Spent on Crowdsale
            div.col-sm-8
              input.form-control(placeholder=0,
                required=false,
                name='bitcoinBalance',
                type='number',
                readonly='readonly',
                value=bitcoinBalance)
          div.form-group
            label.col-sm-4 Referral Link
            div.col-sm-8
              input.form-control(placeholder=0,
                required=false,
                name='referralCode',
                type='text',
                readonly='readonly',
                value='augur-crowdsale.herokuapp.com/ref?id='+referralCode)
          div.form-group
            label.col-sm-4 
              <a href="#" data-toggle="tooltip-top" title="This won't be accurate until after block confirmations">Rep % Currently Owned</a>
            div.col-sm-8
              input.form-control(placeholder=0,
                required=false,
                name='repOwned',
                type='number',
                readonly='readonly',
                value=repPercent)
          div.form-group
            div.col-sm-offset-4.col-sm-8
              button.login.btn.btn-primary(type='submit') Save
          div.pull-right
            a(href="/") Return to home page
